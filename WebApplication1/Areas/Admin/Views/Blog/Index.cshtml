@model List<WebApplication1.Models.BlogPost>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Danh sách bài viết</h4>
        <a href="@Url.Action("Create", "Blog", new { area = "Admin" })" class="btn btn-light shadow-sm">
            <i class="fa fa-plus"></i> Thêm Mới
        </a>
    </div>
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Tiêu đề</th>
                <th>Ngày tạo</th>
                <th>Tác giả</th>
                <th>Hình ảnh</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var blog in Model)
            {
                <tr data-product-id="@blog.Id">
                    <td>@blog.Title</td>
                    <td>@blog.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@blog.Author</td>
                    <td>
                        <img src="@blog.ImageUrl" alt="@blog.ImageUrl" class="img-thumbnail" style="width: 50px; height: 50px;" />
                    </td>
                    <td>
                        <a href="@Url.Action("Details", "Blog", new { area = "Admin", id = blog.Id })" class="btn btn-info btn-sm">Chi tiết</a>
                        <a href="@Url.Action("Edit", "Blog", new { area = "Admin", id = blog.Id })" class="btn btn-warning btn-sm">Sửa</a>
                        <a href="@Url.Action("Delete", "Blog", new { area = "Admin", id = blog.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xóa bài viết này?');">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>