@model WebApplication1.Models.BlogViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mt-4">Thêm bài viết mới</h2>

<div class="card shadow-sm p-4">
    <form asp-area="Admin" asp-controller="Blog" asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="Title" class="font-weight-bold">Tiêu đề</label>
            <input asp-for="Title" class="form-control" name="Title" required placeholder="Nhập tiêu đề bài viết..." />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Content" class="font-weight-bold">Nội dung</label>
            <textarea asp-for="Content" class="form-control" name="Content" rows="5" placeholder="Nhập nội dung bài viết..."></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl" class="font-weight-bold">Hình ảnh</label>
            <input asp-for="ImageUrl" class="form-control" name="ImageUrl" placeholder="Nhập URL hình ảnh..." />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Author" class="font-weight-bold">Tác giả</label>
            <input asp-for="Author" class="form-control" name="Author" placeholder="Nhập tên tác giả..." value="@(User.Identity.Name ?? "Admin")" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="text-center mt-3">
            <button type="submit" class="btn btn-success px-4">Thêm mới</button>
            <a asp-action="Index" class="btn btn-secondary px-4 ml-2">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}