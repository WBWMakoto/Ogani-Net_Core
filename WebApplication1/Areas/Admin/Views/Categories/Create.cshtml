@model WebApplication1.Models.Category

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mt-4">Thêm danh mục mới</h2>

<div class="card shadow-sm p-4">
    <form asp-area="Admin" asp-controller="Categories" asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="Name" class="font-weight-bold">Tên danh mục</label>
            <input asp-for="Name" class="form-control" name="Name" required placeholder="Nhập tên danh mục..." />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="font-weight-bold">Mô tả</label>
            <textarea asp-for="Description" class="form-control" name="Description" placeholder="Mô tả danh mục..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="text-center mt-3">
            <button type="submit" class="btn btn-success px-4">Thêm mới</button>
            <a asp-action="Index" class="btn btn-secondary px-4 ml-2">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
