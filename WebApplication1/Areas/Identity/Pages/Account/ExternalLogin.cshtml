@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Đăng ký";
}

<style>
    .centered-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

<div class="container centered-container">
    <div class="card shadow-sm p-4" style="max-width: 500px; width: 100%;">
        <h2 class="text-center mb-3">@ViewData["Title"]</h2>
        <h5 class="text-center text-muted" id="external-login-title">
            Liên kết với <strong>@Model.ProviderDisplayName</strong>
        </h5>
        <hr />
        <p class="text-info text-center" id="external-login-description">
            Bạn đã xác thực thành công với <strong>@Model.ProviderDisplayName</strong>.<br />
            Vui lòng nhập địa chỉ email bên dưới để hoàn tất đăng nhập.
        </p>

        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Đăng ký</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
