@page
@model LogoutModel
@{
    ViewData["Title"] = "Đăng xuất";
}

<div class="container d-flex flex-column justify-content-center align-items-center vh-100 text-center">
    <h3 class="text-muted">@ViewData["Title"]</h3>
    <div class="mt-3">
        @if (User.Identity.IsAuthenticated)
        {
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-danger btn-lg shadow-sm">Nhấp vào đây để Đăng xuất</button>
            </form>
        }
        else
        {
            <p class="text-success">Bạn đã đăng xuất khỏi ứng dụng thành công.</p>
        }
    </div>
</div>
