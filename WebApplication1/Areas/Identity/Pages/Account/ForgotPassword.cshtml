@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card p-4 shadow-lg" style="max-width: 400px; width: 100%; border-radius: 10px;">
        <div class="text-center mb-4">
            <h3 class="fw-bold">🔑 Quên mật khẩu?</h3>
            <p class="text-muted">Nhập email của bạn để đặt lại mật khẩu.</p>
        </div>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label fw-semibold">Địa chỉ email</label>
                <input asp-for="Input.Email" class="form-control rounded-pill" placeholder="Nhập email của bạn" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success w-100 rounded-pill">🔄 Đặt lại mật khẩu</button>
            <div class="text-center mt-3">
                <a asp-page="./Login" class="text-muted">⬅ Quay lại đăng nhập</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
