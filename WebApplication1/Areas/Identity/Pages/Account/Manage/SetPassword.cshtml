@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Thiết lập mật khẩu";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card p-4 shadow-lg" style="max-width: 450px; width: 100%; border-radius: 10px;">
        <h2 class="text-center fw-bold"><i class="fas fa-lock"></i> @ViewData["Title"]</h2>

        <partial name="_StatusMessage" model="Model.StatusMessage" />

        <p class="text-info text-center mt-3">
            Bạn chưa có tài khoản nội bộ. Hãy thiết lập mật khẩu để có thể đăng nhập mà không cần đăng nhập bên ngoài.
        </p>

        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Input.NewPassword" class="form-label fw-bold">Mật khẩu mới</label>
                <input asp-for="Input.NewPassword" type="password" class="form-control" placeholder="Nhập mật khẩu mới" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label fw-bold">Xác nhận mật khẩu</label>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100">
                <i class="fas fa-save"></i> Lưu mật khẩu
            </button>
        </form>

        <div class="text-center mt-3">
            <a asp-page="./ChangePassword" class="btn btn-link">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
