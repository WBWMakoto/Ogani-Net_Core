@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Xác nhận đặt lại mật khẩu";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card p-4 shadow-lg text-center" style="max-width: 400px; width: 100%; border-radius: 10px;">
        <h3 class="text-success">✅ Đặt lại mật khẩu thành công!</h3>
        <p class="text-muted">Bạn đã đặt lại mật khẩu thành công. Vui lòng đăng nhập để tiếp tục.</p>
        <a asp-page="./Login" class="btn btn-primary w-100 rounded-pill mt-3">🔑 Đăng nhập ngay</a>
    </div>
</div>
