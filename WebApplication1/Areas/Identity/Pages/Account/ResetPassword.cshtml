@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card p-4 shadow-lg" style="max-width: 400px; width: 100%; border-radius: 10px;">
        <div class="text-center mb-4">
            <h3 class="text-danger">🔒 Đặt lại mật khẩu</h3>
            <p class="text-muted">Nhập mật khẩu mới để tiếp tục truy cập tài khoản.</p>
        </div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Input.Code" type="hidden" />
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label fw-bold">📧 Email</label>
                <input asp-for="Input.Email" class="form-control rounded-pill" placeholder="Nhập email của bạn" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label fw-bold">🔑 Mật khẩu mới</label>
                <input asp-for="Input.Password" type="password" class="form-control rounded-pill" placeholder="Nhập mật khẩu mới" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label fw-bold">🔁 Xác nhận mật khẩu</label>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control rounded-pill" placeholder="Nhập lại mật khẩu" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-danger w-100 rounded-pill">🔄 Đặt lại mật khẩu</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
