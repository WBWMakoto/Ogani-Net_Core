@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Quyền truy cập bị từ chối";
}

<style>
    .access-denied-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
    }
    .access-denied-box {
        background: white;
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        text-align: center;
        max-width: 500px;
        width: 100%;
    }
    .access-denied-icon {
        font-size: 50px;
        color: #dc3545;
    }
</style>

<div class="access-denied-container">
    <div class="access-denied-box">
        <div class="access-denied-icon">
            <i class="fas fa-ban"></i>
        </div>
        <h2 class="mt-3 text-danger">@ViewData["Title"]</h2>
        <p class="text-muted">
            Bạn không có quyền truy cập vào tài nguyên này.<br />
            Nếu bạn cho rằng đây là lỗi, vui lòng liên hệ quản trị viên.
        </p>
        <a href="/" class="btn btn-secondary mt-3">
            <i class="fas fa-home"></i> Quay về trang chủ
        </a>
    </div>
</div>

@section Scripts {
    <!-- Font Awesome nếu chưa có -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
