        ? new List<CartItem>()
        : JsonConvert.DeserializeObject<List<CartItem>>(cartJson);
        var cartCount = cart?.Count ?? 0; // Số lượng mặt hàng
        var cartTotalValue = cart?.Sum(item => item.Price * item.Quantity) ?? 0m;
